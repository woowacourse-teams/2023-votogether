{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "baseUrl": "src",
    "types": ["jest"],
    "paths": {
      "@assets/*": ["assets/*"],
      "@pages/*": ["pages/*"],
      "@components/*": ["components/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@type/*": ["types/*"],
      "@atoms/*": ["atoms/*"],
      "@selectors/*": ["selectors/*"],
      "@routes/*": ["routes/*"],
      "@api/*": ["api/*"],
      "@mocks/*": ["mocks/*"]
    },
    "outDir": "./dist"
  },
  "include": [
    "src",
    "src/custom.d.ts",
    "__test__",
    "styled-components.d.ts",
    "env.d.ts",
    "window.d.ts",
    "**/*.spec.ts"
  ],
  "exclude": ["cypress.config.ts", "cypress.d.ts", "cypress", "node_modules", "**/*.cy.ts"]
}
